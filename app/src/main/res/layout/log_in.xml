<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#363F50">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/logIn_text_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="300dp"
            android:layout_marginRight="100dp"
            android:ems="10"
            android:fontFamily="@font/roboto_medium"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/white"
            android:textColorHint="#6FFFFFFF"
            android:textColorLink="#FFFFFF" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="33dp" />

        <EditText
            android:id="@+id/logIn_text_mdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:ems="10"
            android:fontFamily="@font/roboto_medium"
            android:hint="Mot de passe"
            android:inputType="textPassword"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            android:textColorHint="#6FFFFFFF"
            android:textColorLink="#FFFFFF" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="87dp" />

        <Button
            android:id="@+id/button_log"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:backgroundTint="@color/grey_button"
            android:text="Se connecter"
            android:textColor="@color/white"
            app:cornerRadius="20dp"
            app:iconTint="@color/grey_button"
            app:rippleColor="#577590" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>